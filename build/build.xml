<?xml version="1.0" encoding="UTF-8"?>

<project name="Rueckgrat" default="build" basedir=".">

 <target name="prepstructure" description="Prepare the structure of the codebase">
  <delete dir="${basedir}/../doc"/>
  <delete dir="${basedir}/var"/>
  <delete file="${basedir}/../checkstyle.xml"/>
  <delete dir="${basedir}/logs"/>
  <delete dir="${basedir}/testresults"/>
  <mkdir dir="${basedir}/logs"/>
  <mkdir dir="${basedir}/testresults"/>
 </target>

 <target name="phpcs" description="Generate checkstyle.xml using PHP_CodeSniffer">
  <exec executable="phpcs">
   <arg line="--report=checkstyle --report-file=logs/checkstyle.xml --standard=PSR ../src/" />
  </exec>
 </target>

 <target name="phpdoc" description="Generate API documentation">
 <exec executable="phpdoc">
  <arg line="-d ../src -t ../doc" />
 </exec>
</target>

 <target name="phpmd" description="Perform project mess detection using PHPMD and print human readable output. Intended for usage on the command line before committing.">
  <exec executable="phpmd">
   <arg path="../src" />
   <arg value="text" />
   <arg value="build/phpmd.xml" />
  </exec>
 </target>

 <target name="build" depends="prepstructure,phpcs,phpdoc,phpmd"/>

</project>